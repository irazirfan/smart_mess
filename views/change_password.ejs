<% include partials/header %>
<% include partials/navbar %>

<div class="container">

    <div class="jumbotron">
        <h2>Change Password</h2>
    </div>

    <div class="row centered-form">
        <div class="col-xs-12 col-sm-8 col-md-4 col-sm-offset-2 col-md-offset-4">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Change Password Here</h3>
                </div>
                <div class="panel-body">
                    <form role="form" method="post">
                            <div class="form-group">
                                <input type="password" name="password" id="password" class="form-control input-sm" placeholder="Password">
                                <label style="color: red">
                                    <%if(typeof errors != "undefined"){%>
                                        <% errors.forEach(function(err){ %>
                                        <%if(err.param == "password"){%>
                                        <%=err.msg%> <br/>
                                        <% } %>
                                        <% }); %>
                                    <% } %>
                                </label>
                                <label style="color: red">
                                    <%if(typeof invalid_pass != "undefined"){%>
                                    <%if (invalid_pass=='yes') { %>
                                        Invalid Current Password!
                                    <% } %>
                                    <% } %>
                                </label>
                            </div>

                            <div class="row">
                            <div class="col-xs-6 col-sm-6 col-md-6">
                                <div class="form-group">
                                    <input type="password" name="new_password" id="new_password" class="form-control input-sm" placeholder="New Password">
                                    <label style="color: red">
                                        <%if(typeof errors != "undefined"){%>
                                            <% errors.forEach(function(err){ %>
                                            <%if(err.param == "new_password"){%>
                                            <%=err.msg%> <br/>
                                            <% } %>
                                            <% }); %>
                                        <% } %>
                                    </label>
                                </div>

                            </div>
                            <div class="col-xs-6 col-sm-6 col-md-6">
                                <div class="form-group">
                                    <input type="password" name="confirm_password" id="confirm_password" class="form-control input-sm" placeholder="Confirm New Password">
                                    <label style="color: red">
                                        <%if(typeof errors != "undefined"){%>
                                            <% errors.forEach(function(err){ %>
                                            <%if(err.param == "confirm_password"){%>
                                            <%=err.msg%> <br/>
                                            <% } %>
                                            <% }); %>
                                        <% } %>
                                    </label>
                                    <label style="color: red">
                                        <%if(typeof pass_mismatch != "undefined"){%>
                                        <%if (pass_mismatch=='yes') { %>
                                            Passwords didn't match!
                                        <% } %>
                                        <% } %>
                                    </label>
                                </div>
                            </div>
                            </div>
                            <div>
                                <input type="submit" value="Save" class="btn btn-info btn-block">
                            </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>



<% include partials/script %>